<merge xmlns:a="http://schemas.android.com/apk/res/android">

	<org.solovyev.android.view.PickerButton
			a:id="@+id/decrement"
			a:layout_width="wrap_content"
			a:layout_height="match_parent"
			a:background="@drawable/timepicker_down_btn_horizontal"/>

	<TextView a:id="@+id/timepicker_input"
			  a:layout_width="wrap_content"
			  a:layout_height="match_parent"
			  a:gravity="center"
			  a:singleLine="true"
			  style="?android:attr/textAppearanceLargeInverse"
			  a:padding="3sp"
			  a:textColor="@android:color/primary_text_light"
			  a:textSize="30sp"
			  a:inputType="none"
			  a:background="@drawable/timepicker_input_horizontal"/>

	<org.solovyev.android.view.PickerButton
			a:id="@+id/increment"
			a:layout_width="wrap_content"
			a:layout_height="match_parent"
			a:background="@drawable/timepicker_up_btn_horizontal"/>

</merge>
